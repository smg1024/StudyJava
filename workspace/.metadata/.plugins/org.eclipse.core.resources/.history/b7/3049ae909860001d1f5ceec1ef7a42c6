package sw.search;

public class BubbleSort {

	public static void main(String[] args) {
		// 2. bubble정렬할 곳으로 호출한다
		
		TestSort sort = new TestSort();
		sort.init();
		sort.disp();
	}

}

class Sort{
	// 1. 배열에 정렬할 자료를 넣어준다
	int[] num;
	void init() {
		num = new int[] {6, 4, 3, 7, 1, 9, 8};
	}
	
	// 출력
	void disp() {
		for(int n : num) {
			System.out.printf("%-2d", n);
		}
		System.out.println();
	}
	
	// 2. bubble sort 정렬
	void bubbleSort(){
		System.out.println("--------버블 정렬--------");
		for(int i=0; i<num.length-1; i++) {		// 전체 정렬 횟수는 n-1회
			for(int j=num.length-1; j>i; j--) { // 비교 index 설정 (오른쪽 끝에서부터)
				if(num[j-1] > num[j]) {
					swap(num, j-1, j);
				}
			}
		}
	}

	private void swap(int[] num, int left, int right) {	// 교환 함수
		int temp = num[left];
		num[left] = num[right];
		num[right] = temp;
		
	}
}

class TestSort{
	String[] name;
	void init() {
		name = new String[] {"김상민", "유현승", "박건국", "박하성"};
	}
	
	void disp() {
		for(String n : name) {
			System.out.printf("%-4s", n);
		}
		System.out.println();
	}
}