package sw.search;

public class BubbleSort {

	public static void main(String[] args) {
		// 2. bubble정렬할 곳으로 호출한다
		
		TestSort sort = new TestSort();
		sort.init();
		sort.disp();
	}

}

class Sort{
	// 1. 배열에 정렬할 자료를 넣어준다
	int[] num;
	void init() {
		num = new int[] {6, 4, 3, 7, 1, 9, 8};
	}
	
	void disp() {
		for(int n : num) {
			System.out.printf("%-2d", n);
		}
		System.out.println();
	}
}

class TestSort{
	String[] name;
	void init() {
		name = new String[] {"김상민", "유현승", "박건국", "박하성"};
	}
	
	void disp() {
		for(String n : name) {
			System.out.printf("%-2s", n);
		}
		System.out.println();
	}
}